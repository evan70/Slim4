{% extends "layout.twig" %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">Welcome to Documentation</h1>
        <p class="text-xl text-gray-600 dark:text-gray-400">Find all the information you need in our documentation.</p>
    </div>

    <div class="mb-12">
        <h2 class="text-2xl font-semibold mb-6 text-gray-900 dark:text-white">Latest Documents</h2>
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {% for document in documents %}
                <div class="bg-white dark:bg-dark-bg-secondary rounded-lg shadow p-6 hover:shadow-lg transition-shadow duration-200">
                    <h3 class="text-xl font-semibold mb-2">
                        <a href="{{ url_for('documents.show', {'filename': document.filename|replace({'.md': ''}) }) }}" 
                           class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300">
                            {{ document.title }}
                        </a>
                    </h3>
                    <div class="text-gray-600 dark:text-gray-400 text-sm">
                        Last modified: {{ document.modified|date('Y-m-d H:i') }}
                    </div>
                </div>
            {% else %}
                <div class="col-span-full text-center text-gray-600 dark:text-gray-400 py-8">
                    No documents available.
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="text-center">
        <a href="{{ url_for('documents.index') }}" 
           class="inline-block bg-blue-500 text-white px-6 py-3 rounded-lg hover:bg-blue-600 dark:bg-blue-600 dark:hover:bg-blue-700 transition-colors duration-200">
            View All Documents
        </a>
    </div>
</div>
{% endblock %}
