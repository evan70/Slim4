{% extends "admin/layout.twig" %}

{% block content %}
<div class="p-6">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-xl font-semibold">Posts Management</h2>
        <a href="{{ url_for('admin.posts.create') }}" 
           class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg">
            <i class="fas fa-plus mr-2"></i>Create Post
        </a>
    </div>

    <div class="bg-white rounded-lg shadow">
        <div class="p-6">
            <table class="min-w-full">
                <thead>
                    <tr>
                        <th class="text-left py-3 px-4 border-b">Title</th>
                        <th class="text-left py-3 px-4 border-b">Author</th>
                        <th class="text-left py-3 px-4 border-b">Status</th>
                        <th class="text-left py-3 px-4 border-b">Created</th>
                        <th class="text-left py-3 px-4 border-b">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="py-3 px-4" colspan="5">No posts found.</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}