<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - {{ title }}</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .sidebar-link {
            @apply flex items-center px-6 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors duration-200;
        }
        .sidebar-link.active {
            @apply bg-gray-900 text-white;
        }
        .sidebar-icon {
            @apply w-5 h-5 mr-3;
        }
        .stats-card {
            @apply bg-white rounded-lg shadow p-6;
        }
        .stats-icon {
            @apply p-3 rounded-full text-xl;
        }
        .btn-primary {
            @apply bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg inline-flex items-center;
        }
        .table-header {
            @apply text-left py-3 px-4 bg-gray-50 border-b font-medium text-gray-600;
        }
        .table-cell {
            @apply py-3 px-4 border-b border-gray-100;
        }
    </style>
</head>
<body class="bg-gray-100">
    <div class="min-h-screen flex">
        <!-- Sidebar -->
        <aside class="bg-gray-800 w-64 flex flex-col fixed h-full">
            <div class="flex items-center justify-center h-16 bg-gray-900">
                <span class="text-white text-xl font-semibold">Admin Panel</span>
            </div>
            
            <nav class="flex-1 overflow-y-auto py-4">
                <div class="space-y-2">
                    <a href="{{ url_for('admin.dashboard') }}" 
                       class="sidebar-link {{ is_current_url('admin.dashboard') ? 'active' : '' }}">
                        <i class="fas fa-home sidebar-icon"></i>
                        <span>Dashboard</span>
                    </a>
                    
                    <a href="{{ url_for('admin.users') }}" 
                       class="sidebar-link {{ is_current_url('admin.users') ? 'active' : '' }}">
                        <i class="fas fa-users sidebar-icon"></i>
                        <span>Users</span>
                    </a>
                    
                    <a href="{{ url_for('admin.posts') }}" 
                       class="sidebar-link {{ is_current_url('admin.posts') ? 'active' : '' }}">
                        <i class="fas fa-file-alt sidebar-icon"></i>
                        <span>Posts</span>
                    </a>
                    
                    <a href="{{ url_for('admin.settings') }}" 
                       class="sidebar-link {{ is_current_url('admin.settings') ? 'active' : '' }}">
                        <i class="fas fa-cog sidebar-icon"></i>
                        <span>Settings</span>
                    </a>
                </div>
            </nav>
            
            <div class="p-4 border-t border-gray-700">
                <a href="{{ url_for('admin.logout') }}" 
                   class="sidebar-link text-red-400 hover:text-red-300">
                    <i class="fas fa-sign-out-alt sidebar-icon"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 ml-64 p-8">
            <!-- Header -->
            <header class="bg-white shadow rounded-lg mb-6">
                <div class="px-6 py-4 flex justify-between items-center">
                    <h1 class="text-2xl font-semibold text-gray-800">{{ title }}</h1>
                    {% block header_actions %}{% endblock %}
                </div>
            </header>

            <!-- Content -->
            <div class="bg-white shadow rounded-lg">
                {% block content %}{% endblock %}
            </div>
        </main>
    </div>

    {% block scripts %}{% endblock %}
</body>
</html>
