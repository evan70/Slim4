{% extends "admin/layouts/base.twig" %}

{% set breadcrumbs = [
    {'title': 'Dashboard', 'url': url_for('admin.dashboard')},
    {'title': 'Help & Documentation'}
] %}

{% block content %}
    <div class="space-y-6">
        <!-- Quick Start Guide -->
        <div class="bg-white dark:bg-dark-bg-secondary rounded-lg shadow">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h2 class="text-xl font-semibold text-gray-800 dark:text-white">Quick Start Guide</h2>
            </div>
            <div class="p-6 space-y-4">
                <div class="prose dark:prose-invert max-w-none">
                    <h3>Welcome to the Admin Panel</h3>
                    <p>This guide will help you get started with the basic features and functionality of the admin panel.</p>
                    
                    <h4>Basic Navigation</h4>
                    <ul>
                        <li>Use the sidebar menu to navigate between different sections</li>
                        <li>The dashboard provides an overview of key metrics and recent activity</li>
                        <li>You can toggle between light and dark mode using the theme switch in the sidebar</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- FAQ Section -->
        <div class="bg-white dark:bg-dark-bg-secondary rounded-lg shadow">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h2 class="text-xl font-semibold text-gray-800 dark:text-white">Frequently Asked Questions</h2>
            </div>
            <div class="p-6">
                <div x-data="{ activeTab: null }" class="space-y-2">
                    <!-- FAQ Item -->
                    <div class="border border-gray-200 dark:border-gray-700 rounded-lg">
                        <button @click="activeTab = (activeTab === 1 ? null : 1)"
                                class="w-full px-4 py-3 text-left flex justify-between items-center">
                            <span class="font-medium text-gray-800 dark:text-white">How do I reset my password?</span>
                            <i class="fas" :class="activeTab === 1 ? 'fa-chevron-up' : 'fa-chevron-down'"></i>
                        </button>
                        <div x-show="activeTab === 1" 
                             x-collapse
                             class="px-4 py-3 border-t border-gray-200 dark:border-gray-700">
                            <p class="text-gray-600 dark:text-gray-400">
                                You can reset your password by clicking on your profile menu and selecting "Change Password". 
                                Follow the instructions to set a new password.
                            </p>
                        </div>
                    </div>

                    <!-- Add more FAQ items as needed -->
                </div>
            </div>
        </div>

        <!-- Support Section -->
        <div class="bg-white dark:bg-dark-bg-secondary rounded-lg shadow">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h2 class="text-xl font-semibold text-gray-800 dark:text-white">Need More Help?</h2>
            </div>
            <div class="p-6">
                <p class="text-gray-600 dark:text-gray-400 mb-4">
                    If you need additional assistance, please don't hesitate to contact our support team.
                </p>
                <div class="flex space-x-4">
                    <a href="mailto:support@example.com" 
                       class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700">
                        <i class="fas fa-envelope mr-2"></i>
                        Contact Support
                    </a>
                    <a href="#" 
                       class="inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-dark-bg-secondary hover:bg-gray-50 dark:hover:bg-gray-700">
                        <i class="fas fa-book mr-2"></i>
                        View Documentation
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}