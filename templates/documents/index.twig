{% extends "layout.twig" %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Documentation</h1>
    
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {% for document in documents %}
            <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow duration-200">
                <h2 class="text-xl font-semibold mb-2">
                    <a href="{{ url_for('documents.show', {'filename': document.filename|replace({'.md': ''}) }) }}" 
                       class="text-blue-600 hover:text-blue-800">
                        {{ document.title }}
                    </a>
                </h2>
                <div class="text-gray-600 text-sm">
                    Last modified: {{ document.modified|date('Y-m-d H:i') }}
                </div>
            </div>
        {% else %}
            <div class="col-span-full text-center text-gray-600 py-8">
                No documents available.
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
